<form>
    <div class="form-group">
        <label>Name</label>
        <input name="name" type="text" value="{{achievement.text}}">
    </div>
    <div class="form-group">
        <label>Description</label>
        <input name="description" type="text" value="{{achievement.description}}">
    </div>
    <div class="form-group">
        <label>Image</label>
        <div class="form-fields">
            <file-picker name="texture.src" value="{{achievement.img}}" type="imagevideo"></file-picker>
        </div>
    </div>
    {{#unless achievement}}
        <div class="form-group">
            <label>Party/Player</label>
            <multi-select name="owner">
                {{ selectOptions pcs }}
            </multi-select>
        </div>
    {{/unless}}

    <div class="form-group buttons">
        <button type="submit" name="submit">
            <i class="far fa-save"></i> Save
        </button>
    </div>
</form>